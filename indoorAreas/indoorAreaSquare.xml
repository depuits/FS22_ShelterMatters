<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<placeable type="shelterMattersIndoorArea" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/placeable.xsd">
    <storeData>
        <name>$l10n_SM_IndoorAreaSquare</name>
        <image>indoorAreas/store_indoorAreaSquare.dds</image>
        <functions>
            <function>$l10n_SM_IndoorArea</function>
        </functions>
        <price>0</price>
        <dailyUpkeep>0</dailyUpkeep>
        <lifetime>1000</lifetime>
        <rotation>0</rotation>
        <brand>NONE</brand>
        <species>placeable</species>
        <category>sheds</category>
        <brush>
            <type>placeable</type>
            <category>buildings</category>
            <tab>sheds</tab>
        </brush>
    </storeData>

    <base>
        <filename>indoorAreas/indoorAreaSquare.i3d</filename>
        <objectChanges>
            <objectChange node="plane" scaleActive="1 1 1"/>
            <objectChange node="collision" scaleActive="1 1 1"/>
            <objectChange node="animalGrazingArea1Width" translationActive="-1 0 0"/>
            <objectChange node="animalGrazingArea1Height" translationActive="0 0 -1"/>
            <objectChange node="infoTrigger" scaleActive="1 1 1"/>
        </objectChanges>
        <boughtWithFarmland>true</boughtWithFarmland>
    </base>

    <placement useRandomYRotation="false" useManualYRotation="true" collision="collision">
        <sounds>
            <place template="smallImp" />
        </sounds>
    </placement>

    <clearAreas/>

    <indoorAreas>
        <indoorArea startNode="animalGrazingArea1Start" widthNode="animalGrazingArea1Width" heightNode="animalGrazingArea1Height" />
    </indoorAreas>

    <ai>
        <updateAreas/>
    </ai>

    <leveling requireLeveling="false"/>

    <navMesh root="root" planeNode="plane"/>
    
    <i3dMappings>
        <i3dMapping id="root" node="0" />
        <i3dMapping id="plane" node="0>0" />
        <i3dMapping id="collision" node="0>1|0" />
        <i3dMapping id="animalGrazingArea1Start" node="0>2|0" />
        <i3dMapping id="animalGrazingArea1Width" node="0>2|0|0" />
        <i3dMapping id="animalGrazingArea1Height" node="0>2|0|1" />
        <i3dMapping id="infoTrigger" node="0>3" />
    </i3dMappings>
</placeable>
